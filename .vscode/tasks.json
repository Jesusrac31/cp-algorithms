{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar con g++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}", // El archivo C++ que est√° actualmente abierto
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe" // Nombre del ejecutable de salida
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compila el archivo activo y genera el ejecutable"
        }
    ]
}